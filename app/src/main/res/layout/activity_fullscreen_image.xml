<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.lynx.cinerama.presentation.custom.FixedZoomViewPager
        android:id="@+id/vpFullscreenImage_AFI"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_less"/>

    <TextView
        android:id="@+id/tvPageIndicator_AFI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="@color/transparent_less"
        android:layout_gravity="bottom|center_horizontal"
        android:padding="4dp"
        android:layout_margin="7dp"/>

    <LinearLayout
        android:id="@+id/llContainerTitle_AFI"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/transparent_more"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tvTitle_AFI"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="17sp"/>

    </LinearLayout>

</FrameLayout>