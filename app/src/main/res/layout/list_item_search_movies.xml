<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTitleSearch_LISM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Lord of the Rings: Return of the King"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/secondary_text_light"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/ivPosterSearch_LISM"/>

    <TextView
        android:id="@+id/tvDateSearch_LISM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="12-12-2012"
        android:textStyle="italic"
        android:layout_alignBottom="@id/ivPosterSearch_LISM"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGrey"
        android:layout_below="@id/ivPosterSearch_LISM"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/ivPosterSearch_LISM"
        android:layout_width="70dp"
        android:layout_height="100dp"
        tools:src="@drawable/placeholder_poster"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"/>

</RelativeLayout>