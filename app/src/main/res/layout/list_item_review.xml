<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/divider_LIR"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:visibility="gone"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person_pin_black_24dp"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/tvReviewAuthorName_LIR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="Someauthor Nametto"
            android:text="@string/placeholder_no_info"
            android:textColor="@android:color/primary_text_light"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/ivLink_LIR"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_link_black_24dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:visibility="gone"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvReview_LIR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:textStyle="italic"
        android:ellipsize="end"
        android:textSize="13sp"
        tools:text="Voracioused, to plug those terrifying noiseless gaps. Whatever happened to poignant, suspenseful, sure-footed, gripping.Voracioused, to plug those terrifying noiseless gaps. Whatever happened to poignant, suspenseful, sure-footed, gripping."
        android:text="@string/placeholder_no_info"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"/>

</LinearLayout>